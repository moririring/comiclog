
<%= link_to 'New Comic', new_comic_path %>

<h1>コミック</h1>
 
<table border=1>
  <tr>
  <% @titles.each do |title| %>
      <th><%= title %></th>
  <% end %>
  </tr>

  <% @comics.each do |comic| %>
  <tr>
    <td id="comic_<%= comic.id %>">
      <!--<%= link_to image_tag(comic.img, :size => "100x100"), comic.link %><br>-->
      <%= link_to image_tag(comic.img, :size => "100x100"), comic %><br>
      <%= comic.title %>
    </td>
    <td><%= comic.writers %></td>
    <td><%= comic.turn %></td>
    <td><%= comic.sale %></td>
  </tr>
  <% end %>
</table>


<%= paginate @comics %>